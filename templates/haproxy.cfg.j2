global
	daemon
	maxconn 256
	
defaults
	mode http
	timeout connect 5000ms
	timeout client 5000ms
	timeout server 5000ms
	
listen cluster
	bind {{ ansible_default_ipv4 }}:80
	mode http
	stats enable
	balance roundrobin
	
{% for backend in groups['prod_servers'] %}
	server {{hostvars[backend].ansible_hostname}} {{hostvars[backend].ansible_default_ipv4s}} check port 80
{% endfor %}
	option httpchk HEAD /index.php  HTTP/1.0
	